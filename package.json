		"esbuild": "^0.19.4",
		"eslint": "^8.51.0",
		"gzip-size": "^7.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"rehype-accessible-emojis": "^0.3.2",
		"rehype-external-links": "^3.0.0",
		"rehype-plugin-image-native-lazy-loading": "^1.2.0",
		"rimraf": "^5.0.5",
