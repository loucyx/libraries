	},
	"dependencies": {
		"@vangware/types": "workspace:*",
		"@vangware/utils": "workspace:*"
	},
	"devDependencies": {
		"@types/react": "^18.2.22",
		"@types/react-dom": "^18.2.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"exports": {
		".": "./dist/index.js",
		"./*": "./dist/*"
	},
	"files": [
		"dist"
	],
	"homepage": "https://vangware.com/libraries/react_pair/",
	"keywords": [
